{
    "custom/arch": {
        "format": "ó°£‡",
        "tooltip": true,
        "tooltip-format": "btw"
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "active-only": false,
        "format": "{icon}",
        "persistent-workspaces": {
            "HDMI-A-1": [1, 4, 7],
            "DP-1": [2, 5, 8]
        },
        "format-icons": {
            "1": "L1",
            "4": "L2",
            "7": "L3",
            "2": "R1",
            "5": "R2",
            "8": "R3"
        }
    },
    "custom/weather": {
        "exec": "~/code/scripts/waybar/openweathermap-simple.sh",
        "interval": 60,
        "format": "{}"
    },
    "clock": {
        "format": "{:%a %d %b - %H:%M:%S - %W / 52}",
        "tooltip-format": "{calendar}",
        "format-alt": "{:%H:%M}",
        "interval": 1
    },
    "tray": {
	"icon-size": 24,
	"spacing": 15,
        "show-passive-items": true
    },
    "custom/keyboard": {
        "format": "âŒ¨ï¸ {}",
        "exec": "~/code/scripts/waybar/keyboard-print.sh",
        "on-click": "~/code/scripts/waybar/keyboard-switch.sh",
        "on-click-right": "~/code/scripts/waybar/keyboard-switch.sh",
        "exec-on-event": true,
        "interval": 60
    },
    "wireplumber": {
	"format": "ğŸ”Š {volume}%",
	"format-muted": "muted",
	"on-click": "pavucontrol",
        "on-click-middle": "wpctl set-mute $(wpctl status | awk '/\\*/ { sub(/\\./, \"\", $3); print $3 }' | head -n 1) toggle",
        "on-click-right": "~/code/scripts/waybar/toggle-sink.sh"
    },
    "custom/nightlight": {
        "format": "ğŸ’¡ {}",
        "exec": "cat ~/.cache/nightlight",
        "interval": 1800,
        "exec-on-event": true,
        "on-click": "hyprctl hyprsunset temperature 5000 & echo \"N I\" > ~/.cache/nightlight",
        "on-click-middle": "hyprctl hyprsunset temperature 4000 & echo \"NII\" > ~/.cache/nightlight",
        "on-click-right": "hyprctl hyprsunset identity & echo \"DAY\" > ~/.cache/nightlight"
    },
    "cpu": {
        "interval": 2,
        "format": "ğŸ”² {usage:02}%",
        "tooltip": true
    },
    "memory": {
        "format": "ğŸ—„ï¸ {used:>4}G",
        "interval": 5,
	"tooltip": true
    },
    "custom/gpu": {
        "format": "ğŸ® {}%",
        "exec": "printf '%02d' $(nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits)",
        "interval": 2
    },
    "custom/disk": {
        "format": "ğŸ’¾ {}",
        "exec": "df -h | awk 'NR==5 {print $3}'",
        "interval": 5
    },
    "network": {
        "format": "â¬‡ï¸ {bandwidthDownBytes:>5} â¬†ï¸ {bandwidthUpBytes:>5}",
        "interval": 1
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ï®",
            "deactivated": "ï°"
        }
    }
}
